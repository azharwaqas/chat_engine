<div class="ui segment">
  <h3>All Users</h3>
  <div class="ui list">
    <% @user.each do |user| %>
      <div class="item">
        <%= user.name.upcase %> <%= link_to 'Chat Now!', class: "btn btn-primary" %> <%= link_to 'Delete this User', controller: 'dashboard', action: 'destroy', id: user.id, method: :delete, class: "btn btn-danger" %>
      </div>      
    <% end %>
  </div>
</div>

