<div class="ui segment">
  <h3>All Users</h3>
  <div class="ui segment">
    <% @users.each do |user| %>
      <div class="ui segment">
        <%= user.name.upcase %>
        <%= link_to 'Chat Now!', class: "ui primary button"%>
        <%= link_to 'Delete this User', controller: 'dashboard', action: 'destroy', id: user.id, method: :delete, class: "ui red button" %>
      </div>
    <% end %>
  </div>
</div>

